<%- include("partials/header") %>

<div class="ui main text container">
	<div class="ui huge header"><%= blog.title %></div>
	<div class="ui top attached segment">
		<div class="item">
			<img src="<%= blog.image %>" class="ui centered rounded image">
			<div class="content">
				<span><%= blog.created.toDateString() %></span>
			</div>
			<div class="description">
				<p><%- blog.body %></p>
			</div>
			<a href="/blogs/<%= blog._id %>/edit"><i class="edit icon"></i></a>
			<form id="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
				<button id="deleteButton" class="negative ui button circular"><i id="fireIcon" class="eraser icon"></i></button>
			</form>
		</div>
	</div>
	
</div>

<%- include("partials/footer") %>