<!-- variable: blogs -->
<%- include("partials/header") %>

<div class="ui main text container">
	<div class="ui huge header">RESTful Blog App</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blogs.forEach(function(blog){ %>
				<div class="item">
					<div class="image">
						<img class="ui large image" src="<%= blog.image %>">	
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
						<div class="meta">
							<span><%= blog.created.toDateString() %></span>
						</div>
						<div class="description">
							<p><%- blog.body.substring(0,100) %></p>
						</div>
						<div class="extra">
							<a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
								Read More
								<i class="plus square outline icon"></i>
							</a>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</div>

<div class="ui three column grid">
	<% blogs.forEach(function(blog){ %>
		<div class="column">
			<div class="ui fluid card">
				<h2>
					<%= blog.title %>
				</h2>
				<div class="image">
					<img class="ui large image" src="<%= blog.image %>">	
				</div>
				<div class="content">
					<div class="meta">
						<span class="date"><%= blog.created.toDateString() %></span>
					</div>
					<div class="description">
						<p><%- blog.body.substring(0,100) %></p>
					</div>
				</div>
				<div class="extra content">
					<a href="/blogs/<%= blog._id %>"><i class="plus square outline icon"></i></a>
				</div>
			</div>
		</div>
	<% }) %>
</div>
<%- include("partials/footer") %>